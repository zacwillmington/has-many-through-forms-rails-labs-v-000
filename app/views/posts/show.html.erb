<%= @post.title %>
<%= @post.content %>

<%= form_for @comment do |f| %>
    Comment: <%= f.text_field :content %>
    <br>
    Existing User: <%= f.collection_select :user_id, User.all, :id, :username %>
    <br>
    <%= f.fields_for :user_attributes do |user_attributes| %>
        New Username: <%= user_attributes.text_field :username %>
    <% end %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit %>
<% end %>

